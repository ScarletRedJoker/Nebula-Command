{
  "name": "homelab-workspace",
  "version": "1.0.0",
  "description": "Nebula Command Dashboard - Centralized homelab management",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "npm run test:ts && npm run test:py",
    "test:ts": "cd services/discord-bot && npm run check && cd ../stream-bot && npm run check",
    "test:py": "python -m pytest services/dashboard/tests/ -v --tb=short || true",
    "deploy": "./scripts/deploy/replit-deploy.sh deploy",
    "deploy:test": "./scripts/deploy/replit-deploy.sh test",
    "deploy:push": "./scripts/deploy/replit-deploy.sh push",
    "deploy:status": "./scripts/deploy/replit-deploy.sh status",
    "deploy:health": "./scripts/deploy/replit-deploy.sh health",
    "env:status": "./scripts/env/sync.sh status",
    "env:validate": "./scripts/env/validate.sh all",
    "env:sync": "./scripts/env/sync.sh",
    "env:pull": "./scripts/env/sync.sh pull cloud",
    "env:push": "./scripts/env/sync.sh push cloud",
    "dashboard": "cd services/dashboard && python app.py",
    "discord-bot": "cd services/discord-bot && npm run dev",
    "stream-bot": "cd services/stream-bot && npm run dev",
    "all": "npm run dashboard & npm run discord-bot & npm run stream-bot"
  },
  "keywords": [
    "homelab",
    "dashboard",
    "discord-bot",
    "stream-bot"
  ],
  "author": "Evin",
  "license": "MIT",
  "dependencies": {
    "@discord-player/extractor": "^7.1.0",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.6.0",
    "@napi-rs/canvas": "^0.1.88",
    "@octokit/rest": "^22.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^4.0.9",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "discord-player": "^7.1.0",
    "drizzle-kit": "^0.31.8",
    "ffmpeg-static": "^5.3.0",
    "happy-dom": "^20.0.10",
    "libsodium-wrappers": "^0.7.15",
    "next": "^16.1.1",
    "next-themes": "^0.3.0",
    "obs-websocket-js": "^5.0.7",
    "openai": "^6.9.1",
    "p-limit": "^7.2.0",
    "p-retry": "^7.1.0",
    "pg": "^8.16.3",
    "play-dl": "^1.9.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-rnd": "^10.5.2",
    "ssh2-sftp-client": "^12.0.1",
    "supertest": "^7.1.4",
    "tailwindcss-animate": "^1.0.7",
    "vitest": "^4.0.16",
    "wake_on_lan": "^1.0.0",
    "ws": "^8.19.0",
    "ytdl-core": "^4.11.5"
  }
}
