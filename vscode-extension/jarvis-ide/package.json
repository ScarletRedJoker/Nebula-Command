{
  "name": "jarvis-ide",
  "displayName": "Jarvis IDE Assistant",
  "description": "AI-powered code assistant with multi-model orchestration",
  "version": "1.0.0",
  "publisher": "homelab",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jarvis.openChat",
        "title": "Jarvis: Open Chat"
      },
      {
        "command": "jarvis.generateCode",
        "title": "Jarvis: Generate Code"
      },
      {
        "command": "jarvis.explainCode",
        "title": "Jarvis: Explain Selected Code"
      },
      {
        "command": "jarvis.analyzeCode",
        "title": "Jarvis: Analyze Code"
      },
      {
        "command": "jarvis.optimizeCode",
        "title": "Jarvis: Optimize Code"
      },
      {
        "command": "jarvis.collaborate",
        "title": "Jarvis: Multi-Model Review"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jarvis-sidebar",
          "title": "Jarvis AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "jarvis-sidebar": [
        {
          "type": "webview",
          "id": "jarvis.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Jarvis IDE",
      "properties": {
        "jarvis.apiUrl": {
          "type": "string",
          "default": "http://localhost:5000",
          "description": "Jarvis API endpoint URL"
        },
        "jarvis.username": {
          "type": "string",
          "default": "",
          "description": "Dashboard username for authentication"
        },
        "jarvis.password": {
          "type": "string",
          "default": "",
          "description": "Dashboard password for authentication"
        },
        "jarvis.defaultModel": {
          "type": "string",
          "default": "gpt-5",
          "enum": ["gpt-5", "gpt-4"],
          "description": "Default AI model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
