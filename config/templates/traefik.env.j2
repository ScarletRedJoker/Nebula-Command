# ============================================
# TRAEFIK CONFIGURATION
# Auto-generated from config templates
# Environment: {{ environment }}
# Generated: {{ timestamp }}
# ============================================

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL={{ secrets.letsencrypt_email }}

# Cloudflare DNS API Configuration
# Required for DNS-01 challenge (wildcard certs)
CLOUDFLARE_EMAIL={{ secrets.cloudflare_email }}
CLOUDFLARE_DNS_API_TOKEN={{ secrets.cloudflare_dns_api_token }}
CLOUDFLARE_ZONE_API_TOKEN={{ secrets.cloudflare_zone_api_token }}

# Traefik Dashboard Authentication
# Generate with: htpasswd -nb username password
# Example: TRAEFIK_DASHBOARD_AUTH=admin:$apr1$xyz123abc...
TRAEFIK_DASHBOARD_AUTH={{ secrets.traefik_dashboard_auth }}

# Traefik Log Level
TRAEFIK_LOG_LEVEL={{ config.traefik_log_level|default('INFO') }}

# Consul Integration
CONSUL_ENDPOINT=consul-server:8500
CONSUL_PREFIX=traefik

# Docker Provider Settings
DOCKER_NETWORK=homelab
DOCKER_EXPOSED_BY_DEFAULT=false
