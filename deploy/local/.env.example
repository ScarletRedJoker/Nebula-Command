# Nebula Command Dashboard - Local Host Environment Variables
# Copy this file to .env and fill in the values
# Run: cp .env.example .env

# ============================================
# REQUIRED: Plex Media Server
# ============================================
# Get token from: https://www.plex.tv/claim/
PLEX_TOKEN=your_plex_claim_token
PLEX_CLAIM=claim-xxxxxxxxxxxxx

# ============================================
# REQUIRED: MinIO Object Storage
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=GENERATE_ME_SECURE_PASSWORD

# ============================================
# REQUIRED: Home Assistant
# ============================================
# Generate long-lived token in Home Assistant:
# Profile -> Long-Lived Access Tokens -> Create Token
HOME_ASSISTANT_TOKEN=your_home_assistant_long_lived_token

# ============================================
# WireGuard VPN Configuration
# ============================================
# This host's WireGuard IP (should match Linode peer config)
WIREGUARD_IP=10.200.0.2/24

# Linode server's WireGuard IP
WIREGUARD_PEER_IP=10.200.0.1

# Linode server's public IP
LINODE_PUBLIC_IP=your_linode_ip

# ============================================
# OPTIONAL: Sunshine GameStream
# ============================================
SUNSHINE_PASS=your_sunshine_web_ui_password

# Windows VM IP (KVM/libvirt)
WINDOWS_VM_IP=192.168.122.250

# ============================================
# OPTIONAL: VNC Desktop
# ============================================
VNC_PASSWORD=GENERATE_ME_8_CHAR_PASSWORD

# ============================================
# OPTIONAL: NAS Access
# ============================================
NAS_HOST=192.168.1.x
NAS_USER=admin
NAS_PASSWORD=your_nas_password

# ============================================
# Timezone
# ============================================
TZ=America/New_York
