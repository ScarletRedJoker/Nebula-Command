# Nebula Command Dashboard - Cloud Environment Variables
# Copy this file to .env and fill in the values
# Run: cp .env.example .env

# ============================================
# REQUIRED: Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GENERATE_ME_32_CHAR_RANDOM
POSTGRES_DB=homelab

# Individual service database passwords
JARVIS_DB_PASSWORD=GENERATE_ME_32_CHAR_RANDOM
DISCORD_DB_PASSWORD=GENERATE_ME_32_CHAR_RANDOM
STREAMBOT_DB_PASSWORD=GENERATE_ME_32_CHAR_RANDOM

# ============================================
# REQUIRED: Discord Bot
# ============================================
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# ============================================
# REQUIRED: Twitch Integration (Stream Bot)
# ============================================
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# ============================================
# REQUIRED: AI Integration
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key

# ============================================
# REQUIRED: Security
# ============================================
SESSION_SECRET=GENERATE_ME_64_CHAR_RANDOM
JWT_SECRET=GENERATE_ME_64_CHAR_RANDOM

# Dashboard login credentials
WEB_USERNAME=admin
WEB_PASSWORD=GENERATE_ME_SECURE_PASSWORD

# Code Server password
CODE_SERVER_PASSWORD=GENERATE_ME_SECURE_PASSWORD

# ============================================
# OPTIONAL: n8n Workflow Automation
# ============================================
N8N_ENCRYPTION_KEY=GENERATE_ME_32_CHAR_RANDOM
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=GENERATE_ME_SECURE_PASSWORD

# ============================================
# OPTIONAL: YouTube Integration
# ============================================
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# ============================================
# OPTIONAL: Kick Streaming Platform
# ============================================
KICK_CLIENT_ID=your_kick_client_id
KICK_CLIENT_SECRET=your_kick_client_secret

# ============================================
# OPTIONAL: Spotify Integration
# ============================================
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ============================================
# WireGuard VPN Configuration
# ============================================
# Local Ubuntu host IP via WireGuard tunnel
WIREGUARD_LOCAL_HOST=10.200.0.2

# Tailscale fallback (if WireGuard unavailable)
TAILSCALE_LOCAL_HOST=100.x.x.x

# ============================================
# Local Host Service Ports (accessed via VPN)
# ============================================
PLEX_URL=http://10.200.0.2:32400
PLEX_TOKEN=your_plex_token_from_claim

HOME_ASSISTANT_URL=http://10.200.0.2:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_long_lived_token

MINIO_ENDPOINT=http://10.200.0.2:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=GENERATE_ME_SECURE_PASSWORD

# ============================================
# Cloudflare DNS (Required for DNS automation)
# ============================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# ============================================
# Observability Stack
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=GENERATE_ME_SECURE_PASSWORD

# ============================================
# Domain Configuration
# ============================================
DASHBOARD_DOMAIN=dashboard.evindrake.net
DISCORD_BOT_DOMAIN=bot.rig-city.com
STREAM_BOT_DOMAIN=stream.rig-city.com
N8N_DOMAIN=n8n.evindrake.net
CODE_DOMAIN=code.evindrake.net
PLEX_DOMAIN=plex.evindrake.net
HOME_ASSISTANT_DOMAIN=home.evindrake.net
GAME_DOMAIN=game.evindrake.net
GRAFANA_DOMAIN=grafana.evindrake.net
DNS_DOMAIN=dns.evindrake.net
