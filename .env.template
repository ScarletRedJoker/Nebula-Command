# ============================================
# Nebula Command Homelab Environment Template
# ============================================
# Copy this to .env and fill in your values

# ============================================
# Database Passwords
# ============================================
DISCORD_DB_PASSWORD=your_secure_password_here
STREAMBOT_DB_PASSWORD=your_secure_password_here
JARVIS_DB_PASSWORD=your_secure_password_here

# ============================================
# Home Assistant Integration
# ============================================
# Run the setup wizard: homelab-manager.sh -> Option 9
HOME_ASSISTANT_URL=https://home.evindrake.net
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here
HOME_ASSISTANT_VERIFY_SSL=True

# Optional Home Assistant settings
HOME_ASSISTANT_TIMEOUT_CONNECT=10
HOME_ASSISTANT_TIMEOUT_READ=30
HOME_ASSISTANT_HEALTH_CHECK_INTERVAL=300
HOME_ASSISTANT_MAX_RETRIES=3

# ============================================
# Discord Bot
# ============================================
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_APP_ID=your_app_id_here
VITE_DISCORD_CLIENT_ID=your_client_id_here
DISCORD_SESSION_SECRET=your_session_secret_here

# ============================================
# Stream Bot
# ============================================
STREAMBOT_SESSION_SECRET=your_session_secret_here
STREAMBOT_OPENAI_API_KEY=your_openai_api_key_here
STREAMBOT_OPENAI_BASE_URL=https://api.openai.com/v1
STREAMBOT_NODE_ENV=production
STREAMBOT_PORT=5000

# ============================================
# Twitch Integration
# ============================================
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# ============================================
# YouTube Integration
# ============================================
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# ============================================
# Kick Integration
# ============================================
KICK_CLIENT_ID=your_kick_client_id_here
KICK_CLIENT_SECRET=your_kick_client_secret_here

# ============================================
# MinIO Object Storage
# ============================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=minio_admin_password

# ============================================
# Plex Media Server
# ============================================
PLEX_CLAIM=claim-your_plex_claim_token_here

# ============================================
# VNC Desktop
# ============================================
VNC_PASSWORD=your_vnc_password_here
VNC_USER_PASSWORD=your_user_password_here

# ============================================
# Service User
# ============================================
SERVICE_USER=evin

# ============================================
# Reset Flags (use with caution!)
# ============================================
RESET_DB=false
