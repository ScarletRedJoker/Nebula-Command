# ============================================
# Nebula Command Homelab Environment Template
# ============================================
# Copy this to .env and fill in your values

# ============================================
# Database Passwords
# ============================================
DISCORD_DB_PASSWORD=your_secure_password_here
STREAMBOT_DB_PASSWORD=your_secure_password_here
JARVIS_DB_PASSWORD=your_secure_password_here

# ============================================
# Home Assistant Integration
# ============================================
# Run the setup wizard: homelab-manager.sh -> Option 9
HOME_ASSISTANT_URL=https://home.evindrake.net
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here
HOME_ASSISTANT_VERIFY_SSL=True

# Optional Home Assistant settings
HOME_ASSISTANT_TIMEOUT_CONNECT=10
HOME_ASSISTANT_TIMEOUT_READ=30
HOME_ASSISTANT_HEALTH_CHECK_INTERVAL=300
HOME_ASSISTANT_MAX_RETRIES=3

# ============================================
# Discord Bot
# ============================================
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_APP_ID=your_app_id_here
VITE_DISCORD_CLIENT_ID=your_client_id_here
DISCORD_SESSION_SECRET=your_session_secret_here

# ============================================
# Stream Bot
# ============================================
STREAMBOT_SESSION_SECRET=your_session_secret_here
STREAMBOT_OPENAI_API_KEY=your_openai_api_key_here
STREAMBOT_OPENAI_BASE_URL=https://api.openai.com/v1
STREAMBOT_NODE_ENV=production
STREAMBOT_PORT=5000

# ============================================
# Twitch Integration
# ============================================
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# ============================================
# YouTube Integration (Optional)
# ============================================
# Leave empty to disable YouTube features
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# ============================================
# Spotify Integration (Optional)
# ============================================
# Leave empty to disable Spotify features
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REFRESH_TOKEN=

# ============================================
# Kick Integration (Optional)
# ============================================
# Leave empty to disable Kick features
KICK_CLIENT_ID=
KICK_CLIENT_SECRET=

# ============================================
# MinIO Object Storage
# ============================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=minio_admin_password

# ============================================
# Plex Media Server
# ============================================
PLEX_CLAIM=claim-your_plex_claim_token_here

# ============================================
# VNC Desktop
# ============================================
VNC_PASSWORD=your_vnc_password_here
VNC_USER_PASSWORD=your_user_password_here

# ============================================
# Service User
# ============================================
SERVICE_USER=evin

# ============================================
# Reset Flags (use with caution!)
# ============================================
RESET_DB=false

# ============================================
# NEW FEATURES - Plex Media Import
# ============================================
PLEX_URL=http://plex:32400
PLEX_TOKEN=your_plex_token_here
# Get Plex token: Settings → Network → Show Advanced → "X-Plex-Token"
PLEX_MEDIA_PATH=/home/evin/contain/HomeLabHub/services/plex/media

# ============================================
# NEW FEATURES - Game Streaming (Sunshine/Moonlight)
# ============================================
SUNSHINE_HOST=192.168.1.XXX
# Your Windows KVM IP address
SUNSHINE_PORT=47990
SUNSHINE_API_KEY=your_sunshine_api_key_here
# Get from Sunshine Web UI → Configuration → Web UI → API Key
SUNSHINE_AUTO_DISCOVER=true
WINDOWS_KVM_IP=192.168.1.XXX

# ============================================
# NEW FEATURES - Database Administration
# ============================================
DB_ADMIN_ALLOWED_HOSTS=discord-bot-db,localhost
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_SCHEDULE=0 2 * * *
# Cron format: minute hour day month weekday (default: 2 AM daily)
DB_ADMIN_ENCRYPTION_KEY=your_fernet_encryption_key_here
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# ============================================
# NEW FEATURES - Monitoring & Telemetry
# ============================================
TELEMETRY_COLLECTION_INTERVAL=30
# Service metrics collection interval (seconds)
STORAGE_SCAN_INTERVAL=3600
# Disk space scanning interval (seconds, default: 1 hour)
STORAGE_ALERT_THRESHOLD=80.0
# Alert when storage exceeds this percentage

# ============================================
# NEW FEATURES - Dashboard Configuration
# ============================================
FLASK_SECRET_KEY=your_flask_secret_key_here
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
OPENAI_API_KEY=your_openai_api_key_here
# For Jarvis AI assistant
AI_MODEL=gpt-4o
JARVIS_DATABASE_URL=postgresql://postgres:your_postgres_password_here@discord-bot-db:5432/homelab_jarvis
REDIS_URL=redis://homelab-redis:6379/0
CELERY_BROKER_URL=redis://homelab-redis:6379/0
CELERY_RESULT_BACKEND=redis://homelab-redis:6379/0

# ============================================
# Feature Flags (Enable/Disable Features)
# ============================================
ENABLE_PLEX_IMPORT=true
ENABLE_SERVICE_ACTIONS=true
ENABLE_STORAGE_MONITORING=true
ENABLE_GAME_STREAMING=true
ENABLE_DB_MANAGEMENT=true
ENABLE_AI_ASSISTANT=true
ENABLE_HOME_ASSISTANT=true
