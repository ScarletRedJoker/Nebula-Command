[[workflows.workflow]]
name = "discord-bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/discord-bot && NODE_ENV=development npm run dev"

[[workflows.workflow]]
name = "stream-bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/stream-bot && PORT=3000 NODE_ENV=development npm run dev"
