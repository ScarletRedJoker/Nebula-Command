# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-here-change-this

# Dashboard Security
DASHBOARD_API_KEY=your-api-key-here-change-this-to-something-long-and-random
SESSION_SECRET=your-session-secret-here-change-this-to-something-long-and-random

# Security Settings
# Set to 'true' only if you need remote script execution (not recommended for production)
ENABLE_SCRIPT_EXECUTION=false

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock

# SSH Configuration (required only if ENABLE_SCRIPT_EXECUTION=true)
SSH_HOST=localhost
SSH_PORT=22
SSH_USERNAME=evin
SSH_KEY_PATH=/home/evin/.ssh/id_rsa

# Container Configuration
CONTAIN_DIR=/home/evin/contain

# OpenAI Configuration
# When running on Replit, this is provided automatically via Replit AI Integrations
# When deploying to your own server, you need your own OpenAI API key
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Service URLs (update with your actual URLs)
DISCORD_BOT_URL=https://bot.rig-city.com
PLEX_URL=https://plex.evindrake.net
N8N_URL=https://n8n.evindrake.net
STATIC_SITE_URL=https://scarletredjoker.com

# Optional: Custom service names
DISCORD_BOT_CONTAINER=discordticketbot
PLEX_CONTAINER=plex-server
N8N_CONTAINER=n8n
STATIC_SITE_DIR=/var/www/scarletredjoker.com

# Google Services Integration
# These are automatically managed by Replit Connectors when running on Replit
# For production deployments, you can optionally provide your own OAuth credentials
# Note: REPLIT_CONNECTORS_HOSTNAME and REPL_IDENTITY are set automatically on Replit

# Redis Configuration for Google Token Caching
GOOGLE_TOKEN_CACHE_TTL=300

# Calendar Automation Settings
CALENDAR_POLL_INTERVAL_MINUTES=5
CALENDAR_LEAD_TIME_MINUTES=10

# Email Notification Settings
GMAIL_FROM_NAME=Homelab Dashboard
GMAIL_DEFAULT_RECIPIENT=your-email@example.com

# Google Drive Backup Settings
DRIVE_BACKUP_FOLDER_NAME=Homelab Backups
DRIVE_BACKUP_RETENTION_DAYS=30
DRIVE_AUTO_BACKUP_ENABLED=false
DRIVE_AUTO_BACKUP_SCHEDULE=0 2 * * *

# Home Assistant Integration (Optional)
# IMPORTANT: Use internal Docker service name, NOT public URL
# Public URL would cause HTTP 502 errors due to circular Caddy routing
HOME_ASSISTANT_URL=http://homeassistant:8123
HOME_ASSISTANT_TOKEN=your-long-lived-access-token-here
HOME_ASSISTANT_VERIFY_SSL=False

# How to get Home Assistant access token:
# 1. Login to Home Assistant web interface
# 2. Go to Profile > Security (bottom left)
# 3. Scroll to "Long-Lived Access Tokens"
# 4. Click "Create Token" and copy the token
# 5. Paste it above as HOME_ASSISTANT_TOKEN
# Note: Dashboard works without Home Assistant - it's optional
